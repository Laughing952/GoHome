<?xml version="1.0" encoding="utf-8"?>

                                                            

    

                 
                        
                                                      

                 
                            
                                            
           

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical" android:tag="layout/a_login_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:src="@mipmap/ic_management"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_phone"
            style="@style/TextInputLayoutStyle"
            android:layout_marginTop="20dp"
            app:counterMaxLength="11"
            app:errorEnabled="false"
            app:errorTextAppearance="@style/ErrorText">
            <!--这里可以直接使用EditText-->
            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_phone"
                style="@style/TextInputEditTextStyle"
                android:hint="电话号码"
                android:inputType="phone"
                android:tag="binding_1"              />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_password"
            style="@style/TextInputLayoutStyle"
            android:layout_marginTop="20dp"
            app:counterMaxLength="11"
            app:errorEnabled="false"
            app:errorTextAppearance="@style/ErrorText"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/main_color"
            app:passwordToggleTintMode="multiply">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_password"
                style="@style/TextInputEditTextStyle"
                android:hint="密码"
                android:inputType="textPassword"
                android:tag="binding_2"              />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/tv_login"
            style="@style/BottomBottonStyle"
            android:layout_marginTop="30dp"
            android:tag="binding_3"   
            android:text="登录"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="binding_4"   
                android:text="忘记密码？"
                android:textSize="14sp"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/black"/>

            <TextView
                android:id="@+id/tv_go_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="binding_5"   
                android:text="注册账号"
                android:textSize="14sp"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/black"/>

            <TextView
                android:id="@+id/tv_change_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="binding_6"   
                android:text="修改密码"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
         